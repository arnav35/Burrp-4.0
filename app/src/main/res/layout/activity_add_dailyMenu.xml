<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.arnavdesai.burrp.add_dailyMenu">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=" Update Daily Menu "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/bt1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text=" Not Listed"
            android:textColor="#285FBA"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
        <TextView
            android:id="@+id/bt2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text=" Not Listed"
            android:textColor="#285FBA"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/bt3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text=" Not Listed"
            android:textColor="#285FBA"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
        <TextView
            android:id="@+id/bt4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text=" Not Listed"
            android:textColor="#285FBA"
            android:textSize="15sp"
            android:textStyle="bold"

            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/editbhaji1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text=" "
        android:hint="Enter the bhaji"
        android:layout_marginLeft="80dp"/>
    <EditText
        android:id="@+id/editbhaji2"
        android:layout_width="200dp"
        android:text=" "
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Enter the bhaji"
        android:layout_marginLeft="80dp"/>
    <EditText
        android:id="@+id/editbhaji3"
        android:layout_width="200dp"
        android:text=" "
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Enter the bhaji"
        android:layout_marginLeft="80dp"/>
    <EditText
        android:id="@+id/editbhaji4"
        android:layout_width="200dp"
        android:text=" "
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Enter the bhaji"
        android:layout_marginLeft="80dp"/>
    <Button
        android:id="@+id/btsave"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:background="@drawable/button_background"
        android:textSize="15sp"
        android:layout_marginLeft="130dp"
        />

</LinearLayout>