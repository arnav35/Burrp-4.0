<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.arnavdesai.burrp.add_dailyMenu">


    <TextView
        android:id="@+id/tvbhaji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Today's Menu"
        android:textSize="28sp" />

    <TextView
        android:text="@string/dailyMenuTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/noOfItem" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addBhaji"
        android:background="@drawable/button_background"

        android:text="Save"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"

        android:text="Add Bhaji"
        android:layout_marginTop="10dp" />

</LinearLayout>