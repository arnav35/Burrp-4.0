<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_Account">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/upmessname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        android:text="Update Mess Name "
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.015"
        tools:layout_editor_absoluteX="45dp"
        tools:text="Change Mess Name" />

    <Button
        android:id="@+id/upcontactno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Update Contact No"
        app:layout_constraintTop_toBottomOf="@+id/upmessname"
        tools:layout_editor_absoluteX="29dp"
        tools:text="Update Contact Number" />

    <Button
        android:id="@+id/upAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Update Mess Address"
        app:layout_constraintTop_toBottomOf="@+id/upcontactno"
        tools:layout_editor_absoluteX="29dp"
        tools:text="Update Mess Address" />

    <Button
        android:id="@+id/upPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="96dp"
        android:text="Update Password"
        app:layout_constraintTop_toBottomOf="@+id/upAddress"
        tools:text="Update Password" />

</android.support.constraint.ConstraintLayout>